<%- include('./partials/header') %>

<% if(success.length>0){ %>
<div class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
    <div class="flex items-center animate-slide-down bg-emerald-50 border border-emerald-200 text-emerald-700 px-6 py-3 rounded-lg shadow-sm">
        <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <%= success %>
    </div>
</div>
<% } %>

<div class="min-h-screen bg-gray-50">
    <div class="flex flex-col lg:flex-row gap-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Sidebar Navigation -->
        <aside class="lg:w-64 flex-shrink-0">
            <nav class="space-y-2 sticky top-8">
                <a href="/users/shop" class="flex items-center gap-3 px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                    All Products
                </a>
                <a href="/owners/adminpanel" class="flex items-center gap-3 px-4 py-3 bg-indigo-50 text-indigo-700 font-medium rounded-lg border border-indigo-100">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Create Product
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sm:p-8">
                <div class="mb-8">
                    <h1 class="text-2xl font-bold text-gray-900">Create New Product</h1>
                    <p class="text-gray-500 mt-2">Fill in the details below to add a new product</p>
                </div>

                <form action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
                    <!-- Product Details Section -->
                    <div class="space-y-6">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Product Information</h3>
                            <div class="grid gap-6 sm:grid-cols-2">
                                <!-- Image Upload -->
                                <div class="sm:col-span-2">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Product Image</label>
                                    <div class="mt-1 flex justify-center items-center px-6 pt-5 pb-6 border-2 border-dashed border-gray-300 rounded-xl hover:border-indigo-300 transition-colors">
                                        <div class="text-center">
                                            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                            </svg>
                                            <div class="mt-2 text-sm text-gray-600">
                                                <label class="relative cursor-pointer">
                                                    <span class="text-indigo-600 font-medium">Upload a file</span>
                                                    <input id="image" name="image" type="file" class="sr-only">
                                                </label>
                                                <p class="text-xs text-gray-500 mt-1">PNG, JPG up to 2MB</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Product Fields -->
                                <div>
                                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
                                    <input type="text" id="name" name="name" required 
                                        class="block w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-colors">
                                </div>
                                <div>
                                    <label for="price" class="block text-sm font-medium text-gray-700 mb-2">Price</label>
                                    <div class="relative">
                                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">₹</span>
                                        <input type="number" id="price" name="price" required 
                                            class="block w-full pl-8 pr-4 py-3 rounded-lg border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-colors">
                                    </div>
                                </div>
                                <div>
                                    <label for="discount" class="block text-sm font-medium text-gray-700 mb-2">Discount</label>
                                    <div class="relative">
                                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">₹</span>
                                        <input type="number" id="discount" name="discount" 
                                            class="block w-full pl-8 pr-4 py-3 rounded-lg border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-colors">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Color Customization Section -->
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Design Customization</h3>
                            <div class="grid gap-6 sm:grid-cols-3">
                                <div>
                                    <label for="bgcolor" class="block text-sm font-medium text-gray-700 mb-2">Background Color</label>
                                    <div class="relative">
                                        <input type="color" id="bgcolor" name="bgcolor" 
                                            class="w-full h-11 rounded-lg border border-gray-200 cursor-pointer">
                                        <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm">HEX</span>
                                    </div>
                                </div>
                                <div>
                                    <label for="panelcolor" class="block text-sm font-medium text-gray-700 mb-2">Panel Color</label>
                                    <input type="color" id="panelcolor" name="panelcolor" 
                                        class="w-full h-11 rounded-lg border border-gray-200 cursor-pointer">
                                </div>
                                <div>
                                    <label for="textcolor" class="block text-sm font-medium text-gray-700 mb-2">Text Color</label>
                                    <input type="color" id="textcolor" name="textcolor" 
                                        class="w-full h-11 rounded-lg border border-gray-200 cursor-pointer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                        class="w-full py-4 px-6 bg-gradient-to-r from-indigo-600 to-indigo-500 text-white font-semibold rounded-lg hover:shadow-md transition-all hover:scale-[1.005]">
                        Create Product
                    </button>
                </form>
            </div>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>