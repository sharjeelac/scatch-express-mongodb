<%- include('./partials/header') %>
<div class="w-full min-h-screen px-10 py-16 flex flex-col items-center bg-gray-100">
  <h2 class="text-3xl font-bold mb-8">Your Shopping Cart</h2>
  
  <% user.cart.forEach((item) => { %>
  <div class="w-full max-w-4xl bg-white shadow-lg rounded-2xl overflow-hidden flex mb-10 p-6">
    <div class="w-1/3 flex justify-center items-center bg-[<%= item.bgcolor %>] rounded-lg">
      <img class="h-40" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
    </div>
    <div class="w-2/3 px-6 flex flex-col justify-between">
      <h3 class="text-2xl font-semibold mb-3"><%= item.name %></h3>
      <div class="flex items-center justify-between mt-3">
        <div class="flex items-center gap-3">
          <button class="w-8 h-8 flex items-center justify-center bg-gray-300 hover:bg-gray-400 rounded-full text-lg">-</button>
          <span class="px-3 py-1 rounded bg-gray-200 text-lg">1</span>
          <button class="w-8 h-8 flex items-center justify-center bg-gray-300 hover:bg-gray-400 rounded-full text-lg">+</button>
        </div>
        <h2 class="text-xl font-semibold">₹ <%= (item.price - item.discount + 20) %></h2>
      </div>
    </div>
  </div>
  <% }) %>
  
  <div class="w-full max-w-4xl bg-white shadow-lg rounded-2xl p-6 mt-5">
    <h3 class="text-xl font-semibold mb-4">Price Breakdown</h3>
    <div class="border-b border-gray-300 pb-4">
      <div class="flex justify-between mb-2"><span>Total MRP</span><span>₹ <%= bill %></span></div>
      <div class="flex justify-between mb-2"><span>Discount</span><span class="text-green-600">-₹ <%= discount %></span></div>
      <div class="flex justify-between mb-2"><span>Platform Fee</span><span>₹ 20</span></div>
      <div class="flex justify-between font-bold"><span>Shipping Fee</span><span class="text-green-600">FREE</span></div>
    </div>
    <div class="flex justify-between text-xl font-bold mt-4">
      <span>Total Amount</span>
      <span class="text-green-600">₹ <%= bill %></span>
    </div>
    <button class="w-full mt-6 py-3 bg-blue-600 text-white font-semibold text-lg rounded-lg hover:bg-blue-700">Proceed to Checkout</button>
  </div>
</div>
<%- include('./partials/footer') %>
